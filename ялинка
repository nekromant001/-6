def draw_tree(n: int) -> None:
    if n <= 0:
        print("Висота має бути додатнім цілим числом.")
        return
    for i in range(n):
        spaces = n - i - 1
        stars = 2 * i + 1
        print(' ' * spaces + '*' * stars)

if __name__ == "__main__":
    try:
        n = int(input("Введіть висоту ялинки (ціле число): "))
        draw_tree(n)
    except ValueError:
        print("Будь ласка, введіть коректне ціле число.")
